<?xml version="1.0" encoding="utf-8"?>

<!--
interpolator ="@android:anim/accelerate_interpolator"
interpolator ="@android:anim/accelerate_decelerate_interpolator"
interpolator ="@android:anim/linear_interpolator"
interpolator ="@android:anim/anticipate_interpolator"
interpolator ="@android:anim/anticipate_overshoot_interpolator"
interpolator ="@android:anim/overshoot_interpolator"
interpolator ="@android:anim/cycle_interpolator"
interpolator ="@android:anim/bounce_interpolator"
-->
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:duration="2000"
     android:shareInterpolator="true">
    <translate
        android:fillAfter="false"
        android:fillBefore="true"
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"
        android:toXDelta="100%p"
        android:toYDelta="100%p"/>

    <alpha
        android:fillAfter="false"
        android:fillBefore="true"
        android:fromAlpha="0.0"
        android:interpolator="@android:anim/linear_interpolator"
        android:repeatCount="2"
        android:repeatMode="reverse"
        android:toAlpha="1.0"/>
    <rotate
        android:fillAfter="false"
        android:fillBefore="true"
        android:fromDegrees="0.0"
        android:interpolator="@android:anim/linear_interpolator"
        android:pivotX="50%p"
        android:pivotY="50%p"
        android:repeatCount="3"
        android:repeatMode="restart"
        android:toDegrees="359.0"/>

    <scale
        android:fillAfter="false"
        android:fromXScale="0.0"
        android:fromYScale="0.0"
        android:pivotX="50.0%"
        android:pivotY="50.0%"
        android:toXScale="1.4"
        android:toYScale="1.4"/>
</set>